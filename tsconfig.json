{
  "compilerOptions": {
    /* Defaults */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Paths: */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Bundling: */
    "moduleResolution": "Node",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["**/*.ts", ".eslintrc.cjs"],
  "exclude": [
    "./node_modules",
    "./cli",
    "./build",
    "**/__test-utils",
    "vitest.config.ts",
    "**/*.test.ts"
  ]
}
